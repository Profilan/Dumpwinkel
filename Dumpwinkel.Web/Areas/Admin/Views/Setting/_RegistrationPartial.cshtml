@model Dumpwinkel.Web.Areas.Admin.Models.SettingViewModel

<div class="form-group row">
    <div class="col-lg-6 row">

        <div class="col-lg-6">
            <label>Legacy deadline</label>
            @Html.EditorFor(model => model.LegacyAmount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col-lg-6">
            <label>&nbsp;</label>
            @Html.EnumDropDownListFor(model => model.LegacyUnit, "- Select unit -", new { @class = "form-control" })
        </div>
    </div>
    <div class="col-lg-6">

    </div>
</div>

<div class="form-group row">
    <div class="col-lg-2">
        <div class="form-group">
            @Html.LabelFor(model => model.Tolerance, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Tolerance, new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>
</div>

<div class="form-group row">
    <div class="col-lg-6">
        <label>Eerder geregistreed tekst</label>
        @Html.TextAreaFor(model => model.LegacyText, new { @class = "form-control editor", @rows = 6 })
        @Html.ValidationMessageFor(model => model.LegacyText, "", new { @class = "text-danger" })
    </div>
    <div class="col-lg-6">
        <label>Al geregistreerd tekst</label>
        @Html.TextAreaFor(model => model.AlreadyText, new { @class = "form-control editor", @rows = 6 })
        @Html.ValidationMessageFor(model => model.AlreadyText, "", new { @class = "text-danger" })
    </div>
</div>
