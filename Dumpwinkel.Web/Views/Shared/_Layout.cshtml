@{ 
    var backgroundImageUrl = ViewBag.BackgroundImageUrl;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="facebook-domain-verification" content="9nm5r6tdhhdegjoef1gp1iukyi5moh" />
    <title>@ViewBag.Title - De Eekhoorn Dumpwinkel</title>
    <link rel="shortcut icon" href="~/img/favicon.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    <link rel="stylesheet" href="https://use.typekit.net/saw0kyu.css">

</head>
<body class="top" style="background-image: url('@backgroundImageUrl') !important;">


    <div class="container mt-md-5 mb-3">
        <div class="p-0 m-0" style="background-color: #525d57;">
            <nav class="navbar navbar-eekhoorn p-0">
                <a class="navbar-brand p-0" href="/">
                    <img class="d-none d-sm-block" src="~/img/logo-dump.png" style="height: 80px; margin: 25px 40px;" />
                    <img class="d-block d-sm-none" src="~/img/logo-dump.png" style="height: 40px; margin: 10px;" />
                </a>
                <span class="d-none d-sm-block navbar-text" style="font-family: 'korolev-rounded', sans-serif; font-weight: 500; color: @ViewBag.TitleColor; font-size: @(ViewBag.TitleSize + "px"); padding-right: 30px;">@ViewBag.SiteTitle</span>
                <span class="d-block d-sm-none navbar-text" style="font-family: 'korolev-rounded', sans-serif; font-weight: 500; color: @ViewBag.TitleColor; font-size: @(ViewBag.TitleSize / 2.5 + "px"); padding-right: 15px;">@ViewBag.SiteTitle</span>
            </nav>

        </div>
    </div>

    <div class="container">
        <div class="col-md-12" style="background-color: rgba(255,255,255, 0.9); padding: 15px;">
            @foreach (var flash in Request.GetFlashMessages())
            {
                <div class="alert @(flash.Type == "success" ? "alert-success" : "alert-warning")" role="alert">
                    @Html.Raw(flash.Message)
                </div>
            }
        </div>
    </div>

    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>
