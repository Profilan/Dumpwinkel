@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
    {
    @Html.AntiForgeryToken()

    
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null,  new { @class = "nav-link text-light" })
        <a class="nav-link text-light" href="javascript:document.getElementById('logoutForm').submit()">Uitloggen</a>
    
    }
}
else
{
    <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">@Html.ActionLink("Inloggen", "Login", "Account", null, new { @class = "nav-link" })</li>
    </ul>
}
